<p style="color: green"><%= notice %></p>
<%= form_with(model: idea) do |form| %>
  <% if idea.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
        <% idea.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= form.label :name, style: "display: block", class: "mb-1" %>
    <%= form.text_field :name, class: "form-control mb-2" %>
  </div>

  <div class="mb-2">
    <%= form.label :description, style: "display: block", class: "mb-1" %>
    <%= form.text_area :description, class: "form-control mb-2", rows: "2" %>
  </div>

  <div class="mb-2">
    <%= form.label :picture, style: "display: block", class: "mb-1" %>
    <%= form.file_field :picture, class: "form-control form-control-sm mb-3" %>
  </div>

  <div class="mb-2">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
