<%= form_with(model: [idea, idea.comments.build]) do |form| %>
  <div class="mb-2">
    <%= form.label :user_name, "Your name", class: "form-label" %>
    <%= form.text_field :user_name, class: "form-control" %>
  </div>

  <div class="mb-2">
    <%= form.label :body, "Comment message", class: "form-label mb-1" %>
    <%= form.text_area :body, class: "form-control mb-3" %>
  </div>

  <div class="mb-2">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>